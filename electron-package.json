{
    "name": "praise-planner-pro",
    "productName": "Alabanza Planner Pro",
    "version": "1.0.0",
    "description": "Sistema de Gesti√≥n Ministerial para Ministerios de Alabanza",
    "main": "electron/main.js",
    "author": "Ministerio de Alabanza",
    "license": "MIT",
    "scripts": {
        "electron:dev": "concurrently \"npm run dev\" \"npm run server:dev\" \"wait-on http://localhost:8080 && electron .\"",
        "electron:build": "npm run build && electron-builder",
        "electron:build:win": "npm run build && electron-builder --win",
        "electron:build:mac": "npm run build && electron-builder --mac",
        "electron:build:linux": "npm run build && electron-builder --linux",
        "package": "npm run build && npm run server:build && electron-builder"
    },
    "build": {
        "appId": "com.ministerio.alabanza.planner",
        "productName": "Alabanza Planner Pro",
        "directories": {
            "output": "dist-electron",
            "buildResources": "build"
        },
        "files": [
            "dist/**/*",
            "electron/**/*",
            "server/**/*",
            "!server/node_modules",
            "!server/test*.js",
            "!server/debug*.js",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "server",
                "to": "server",
                "filter": [
                    "**/*",
                    "!node_modules/**/*",
                    "!test*.js",
                    "!debug*.js"
                ]
            }
        ],
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "build/icon.ico",
            "artifactName": "${productName}-Setup-${version}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Alabanza Planner Pro",
            "installerIcon": "build/icon.ico",
            "uninstallerIcon": "build/icon.ico",
            "installerHeaderIcon": "build/icon.ico",
            "license": "LICENSE.txt"
        },
        "portable": {
            "artifactName": "${productName}-Portable-${version}.${ext}"
        },
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "icon": "build/icon.icns",
            "category": "public.app-category.productivity"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "build/icon.png",
            "category": "Office"
        }
    },
    "devDependencies": {
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1",
        "wait-on": "^7.2.0"
    }
}